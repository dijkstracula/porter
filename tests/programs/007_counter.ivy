#lang ivy1.8

include numbers

process mutator = {
    type t
    interpret t -> int

    export action inc
    export action dec

    import action show

    var count : t

    after init {
        count := 1;
    }

    implement inc {
        count := count + 1;
        call show
    }
    implement dec {
        count := count - 1;
    }

    specification {
        after inc {
            assert true
        }
    }

    invariant [nonnegativity] count >= 0
}

attribute method=bmc[10]
